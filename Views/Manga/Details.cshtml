@model SiteManga.Models.Manga

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Manga</h4>
    <hr />
    @if (Model.Images.Count > 0)
    {
    <div id="carousel" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
            @{ int i = 0;}
            @foreach (Image image in Model.Images)
            {
                @if (i++ == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner" role="listbox">
            @{ int y = 0;}
            @foreach (Image image2 in Model.Images)
            {
                @if (y++ == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="@Url.Content("~/images/" + image2.Path)">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="@Url.Content("~/images/" + image2.Path)">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    }
